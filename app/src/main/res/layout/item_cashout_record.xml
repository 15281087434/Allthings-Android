<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/x_ui_px_30.0"
    android:paddingBottom="@dimen/x_ui_px_30.0"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_type"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="@dimen/x_ui_px_80.0"
        android:src="@mipmap/icon_zhifubao"
        android:layout_height="@dimen/x_ui_px_80.0"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/iv_type"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_money"
        android:textSize="@dimen/font_ui_px_34.0"
        android:layout_marginLeft="@dimen/x_ui_px_12.0"
        android:textColor="@color/bottom_tab_tv"
        android:text="支付宝提现"
        />
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tv_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/font_ui_px_44.0"
        android:textColor="@color/FF666666"
        android:textStyle="bold"
        tools:text="50.0"
        />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x_ui_px_12.0"
        app:layout_constraintLeft_toRightOf="@+id/iv_type"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintRight_toLeftOf="@+id/tv_stutas"
        android:textSize="@dimen/font_ui_px_30.0"
        android:layout_marginTop="@dimen/x_ui_px_18.0"
        android:textColor="@color/FF999999"
        tools:text="50.0"
        />
    <TextView
        android:id="@+id/tv_stutas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x_ui_px_12.0"
        app:layout_constraintLeft_toRightOf="@+id/tv_time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:textSize="@dimen/font_ui_px_30.0"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_time"
        android:textColor="@color/FF666666"
        tools:text="进行中"
        />
</android.support.constraint.ConstraintLayout>