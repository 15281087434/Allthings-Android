<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg_white">

    <include layout="@layout/common_title_layout"/>

    <Button
        android:id="@+id/startBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动"
        android:layout_marginTop="@dimen/x_ui_px_30.0"/>

    <Button
        android:id="@+id/jumpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转"
        android:layout_marginTop="@dimen/x_ui_px_30.0"/>

    <Button
        android:id="@+id/endBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂停"
        android:layout_marginTop="@dimen/x_ui_px_30.0"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/goldTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/FFE7A722"
            android:text="+25"
            android:layout_marginLeft="@dimen/x_ui_px_30.0"
            android:visibility="invisible"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <songqiu.allthings.view.CustomCircleProgress
                android:id="@+id/circleProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/x_ui_px_10.0"
                />

            <ImageView
                android:id="@+id/goldImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_reading"
                android:layout_marginTop="@dimen/x_ui_px_25.0"
                android:layout_marginLeft="@dimen/x_ui_px_25.0"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
