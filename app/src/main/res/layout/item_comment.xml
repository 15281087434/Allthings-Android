<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_ui_px_200.0"
        android:orientation="horizontal"
        >
        <FrameLayout
            android:id="@+id/fl_userIcon"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/x_ui_px_30.0"

            android:layout_marginTop="@dimen/x_ui_px_28.0"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/userIcon"
                android:layout_width="@dimen/x_ui_px_72.0"
                android:layout_height="@dimen/x_ui_px_72.0"
                android:src="@mipmap/head_default"

                />
            <ImageView
                    android:id="@+id/iv_level"
                    android:layout_width="@dimen/x_ui_px_20.0"
                    android:layout_height="@dimen/x_ui_px_20.0"
                    android:layout_gravity="end|bottom"


                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/x_ui_px_12.0"
            android:layout_marginRight="@dimen/x_ui_px_30.0"
            android:layout_toRightOf="@+id/fl_userIcon">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/x_ui_px_28.0"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="阿西吧"
                    android:textColor="@color/bottom_tab_tv"
                    android:textSize="@dimen/x_ui_px_36.0"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />

                <ImageView
                    android:id="@+id/dotImg"
                    android:layout_width="@dimen/x_ui_px_16.0"
                    android:layout_height="@dimen/x_ui_px_16.0"
                    android:src="@drawable/bg_circle_de5c51"
                    android:layout_marginLeft="@dimen/x_ui_px_12.0"
                    />

            </LinearLayout>


            <TextView
                android:id="@+id/contentTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="这是我对你的什么文章的评论内容这个合格哈..."
                android:textColor="@color/FF666666"
                android:textSize="@dimen/x_ui_px_32.0"
                android:singleLine="true"
                android:ellipsize="end"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/x_ui_px_12.0">
                <TextView
                    android:id="@+id/typeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评论了你"
                    android:textColor="@color/FF999999"
                    android:textSize="@dimen/x_ui_px_28.0"
                    android:maxLength="12"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />

                <TextView
                    android:id="@+id/timeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2010-10-10"
                    android:textColor="@color/FF999999"
                    android:textSize="@dimen/x_ui_px_28.0"
                    android:layout_marginLeft="@dimen/x_ui_px_40.0"/>
            </LinearLayout>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_ui_px_1.0"
        android:background="@color/line_color"
        android:layout_marginLeft="@dimen/x_ui_px_112.0"
        android:layout_marginRight="@dimen/x_ui_px_30.0"
        android:layout_alignParentBottom="true"/>

    </RelativeLayout>
</LinearLayout>
