<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout">
    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textColor="@color/bottom_tab_tv"
        android:textSize="@dimen/x_ui_px_40.0"
        android:layout_marginTop="@dimen/x_ui_px_28.0"
        android:layout_marginLeft="@dimen/x_ui_px_30.0"
        android:layout_marginRight="@dimen/x_ui_px_30.0"
        android:text="草船借箭是一个故事"
        android:singleLine="true"
        android:maxEms="21"
        android:ellipsize="end"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x_ui_px_6.0"
        android:layout_gravity="center_horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布时间:  "
            android:textColor="@color/FFBFBFBF"
            android:textSize="@dimen/x_ui_px_24.0"/>
        <TextView
            android:id="@+id/tiemTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刚刚"
            android:textColor="@color/FFBFBFBF"
            android:textSize="@dimen/x_ui_px_24.0"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="浏览:  "
            android:textColor="@color/FFBFBFBF"
            android:textSize="@dimen/x_ui_px_24.0"
            android:layout_marginLeft="@dimen/x_ui_px_90.0"/>
        <TextView
            android:id="@+id/lookTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0次"
            android:textColor="@color/FFBFBFBF"
            android:textSize="@dimen/x_ui_px_24.0"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/x_ui_px_30.0"
        android:layout_marginRight="@dimen/x_ui_px_30.0"
        android:layout_marginTop="@dimen/x_ui_px_20.0"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/contentTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/FF666666"
            android:textSize="@dimen/x_ui_px_31.0"
            android:ellipsize="end"
            android:lines="3"
            android:lineSpacingExtra="@dimen/x_ui_px_12.0"
            android:text="草船借箭是我国古典名著《三国演义》中赤壁之战的一个故事。借箭由周瑜故意提出限十天造十万支箭，机智的诸葛亮一眼识破是一条害人之计，却淡定表示“只需要三天”。"
            />
        <ImageView
            android:id="@+id/rightPic"
            android:layout_width="@dimen/x_ui_px_252.0"
            android:layout_height="@dimen/x_ui_px_152.0"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/x_ui_px_12.0"
            android:src="@mipmap/item_home_tab_right_pic"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/x_ui_px_20.0"
            android:layout_marginBottom="@dimen/x_ui_px_28.0"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x_ui_px_30.0">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/userIcon"
                    android:layout_width="@dimen/x_ui_px_70.0"
                    android:layout_height="@dimen/x_ui_px_70.0"
                    android:src="@mipmap/item_home_tab_user_icon"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/x_ui_px_28.0"
                    android:textColor="@color/FF999999"
                    android:text="大力·悬疑"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />

                <TextView
                    android:id="@+id/setTopTv"
                    android:layout_width="@dimen/x_ui_px_52.0"
                    android:layout_height="@dimen/x_ui_px_32.0"
                    android:textSize="@dimen/x_ui_px_16.0"
                    android:textColor="@color/FFDE5C51"
                    android:background="@drawable/rectangle_common_red"
                    android:text="置顶"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/x_ui_px_16.0"
                    android:visibility="gone"/>

            </LinearLayout>

            <TextView
                android:id="@+id/collectTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/item_subitem_collect"
                android:text="0"
                android:textColor="@color/FF999999"
                android:textSize="@dimen/x_ui_px_23.0"
                android:drawablePadding="@dimen/x_ui_px_5.0"
                android:layout_marginRight="@dimen/x_ui_px_30.0"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_ui_px_2.0"
        android:background="@color/line_color"
        android:layout_marginLeft="@dimen/x_ui_px_30.0"
        android:layout_marginRight="@dimen/x_ui_px_30.0"/>

</LinearLayout>
