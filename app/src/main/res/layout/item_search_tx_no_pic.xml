<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/layout"
    >

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textColor="@color/bottom_tab_tv"
        android:textSize="@dimen/x_ui_px_40.0"
        android:layout_marginTop="@dimen/x_ui_px_28.0"
        android:layout_marginLeft="@dimen/x_ui_px_30.0"
        android:layout_marginRight="@dimen/x_ui_px_30.0"
        android:text="草船借箭是一个故事"
        android:singleLine="true"
        android:maxEms="21"
        android:ellipsize="end"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/contentTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/FF666666"
        android:textSize="@dimen/x_ui_px_31.0"
        android:layout_marginTop="@dimen/x_ui_px_20.0"
        android:layout_marginRight="@dimen/x_ui_px_30.0"
        android:layout_marginLeft="@dimen/x_ui_px_30.0"
        android:ellipsize="end"
        android:lines="3"
        android:lineSpacingExtra="@dimen/x_ui_px_12.0"
        android:text="草船借箭是我国古典名著《三国演义》中赤壁之战的一个故事。借箭由周瑜故意提出限十天造十万支箭，机智的诸葛亮一眼识破是一条害人之计，却淡定表示“只需要三天”。"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/x_ui_px_20.0"
            android:layout_marginBottom="@dimen/x_ui_px_28.0"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x_ui_px_30.0">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/x_ui_px_28.0"
                    android:textColor="@color/FF999999"
                    android:text="大力·悬疑"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/collectTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/item_subitem_collect"
                android:text="0"
                android:textColor="@color/FF999999"
                android:textSize="@dimen/x_ui_px_23.0"
                android:drawablePadding="@dimen/x_ui_px_5.0"
                android:layout_marginRight="@dimen/x_ui_px_30.0"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_ui_px_12.0"
        android:background="@color/line_color"/>

</LinearLayout>
