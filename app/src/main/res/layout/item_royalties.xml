<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/x_ui_px_26.0"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/x_ui_px_30.0">
    <TextView
        android:id="@+id/tv_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:textColor="@color/bottom_tab_tv"
        tools:text="这是一个标题"
        android:layout_marginRight="@dimen/x_ui_px_40.0"
        app:layout_constraintRight_toLeftOf="@+id/tv_money"
        android:textSize="@dimen/font_ui_px_38.0"
        android:lines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_money"
        app:layout_constraintLeft_toRightOf="@+id/tv_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        tools:text="500.0元"
        android:lines="1"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/font_ui_px_46.0"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_time"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:layout_width="wrap_content"
        tools:text="19-12-10"
        android:textColor="@color/FF999999"
        android:lines="1"
        android:layout_marginTop="@dimen/x_ui_px_18.0"
        android:textSize="@dimen/font_ui_px_32.0"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_stutas"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:layout_width="wrap_content"
        android:text="冻结"
        android:textColor="@color/FF999999"
        android:visibility="gone"
        android:layout_marginTop="@dimen/x_ui_px_18.0"
        android:lines="1"

        android:textSize="@dimen/font_ui_px_32.0"
        android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>