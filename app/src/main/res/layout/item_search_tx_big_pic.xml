<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout">

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textColor="@color/bottom_tab_tv"
        android:textSize="@dimen/x_ui_px_40.0"
        android:layout_marginTop="@dimen/x_ui_px_28.0"
        android:layout_marginLeft="@dimen/x_ui_px_30.0"
        android:layout_marginRight="@dimen/x_ui_px_30.0"
        android:text="草船借箭是一个故事"
        android:singleLine="true"
        android:maxEms="21"
        android:ellipsize="end"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/bigPicImg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_ui_px_330.0"
        android:layout_marginTop="@dimen/x_ui_px_19.0"
        android:src="@mipmap/item_home_tab_big_pic"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/contentTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x_ui_px_20.0"
        android:textSize="@dimen/x_ui_px_31.0"
        android:textColor="@color/FF666666"
        android:layout_marginLeft="@dimen/x_ui_px_30.0"
        android:layout_marginRight="@dimen/x_ui_px_30.0"
        android:maxLines="2"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/x_ui_px_12.0"
        android:text="草船借箭是我国古典名著《三国演义》中赤壁之战的一个故事。借箭由周瑜故意提出限十天造十万支箭，机智的诸葛亮"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/x_ui_px_20.0"
            android:layout_marginBottom="@dimen/x_ui_px_28.0"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x_ui_px_30.0">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">


                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/x_ui_px_28.0"
                    android:textColor="@color/FF999999"
                    android:text="大力·悬疑"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_ui_px_2.0"
        android:background="@color/line_color"
        android:layout_marginRight="@dimen/x_ui_px_30.0"
        android:layout_marginLeft="@dimen/x_ui_px_30.0"/>

</LinearLayout>
