<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout"
        android:layout_marginTop="@dimen/x_ui_px_20.0"
        android:layout_marginBottom="@dimen/x_ui_px_20.0">

        <View
            android:layout_width="@dimen/x_ui_px_48.0"
            android:layout_height="@dimen/x_ui_px_2.0"
            android:layout_marginLeft="@dimen/x_ui_px_120.0"
            android:layout_gravity="center_vertical"
            android:background="@color/FF999999"/>
        <TextView
            android:id="@+id/showMoreTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="展开更多回复"
            android:textSize="@dimen/x_ui_px_28.0"
            android:textColor="@color/FF999999"
            android:layout_marginLeft="@dimen/x_ui_px_15.0"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow_below_comment"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x_ui_px_10.0"/>
    </LinearLayout>

</LinearLayout>