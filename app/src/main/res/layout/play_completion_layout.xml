<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/ll_complete"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x_ui_px_100.0"
        android:layout_marginTop="@dimen/x_ui_px_60.0"
        android:layout_marginRight="@dimen/x_ui_px_100.0"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/qqLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/window_qq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x_ui_px_10.0"
                android:text="QQ"
                android:textColor="@color/white"
                android:textSize="@dimen/x_ui_px_28.0" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/weChatLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/window_wechat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x_ui_px_10.0"
                android:text="微信"
                android:textColor="@color/white"
                android:textSize="@dimen/x_ui_px_28.0" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/weChatFriendLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/window_wechat_friend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x_ui_px_10.0"
                android:text="朋友圈"
                android:textColor="@color/white"
                android:textSize="@dimen/x_ui_px_28.0" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linkLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/window_link" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x_ui_px_10.0"
                android:text="复制链接"
                android:textColor="@color/white"
                android:textSize="@dimen/x_ui_px_28.0" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_re"
        android:layout_width="@dimen/x_ui_px_150.0"
        android:layout_height="@dimen/x_ui_px_54.0"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x_ui_px_40.0"
        android:background="@drawable/play_completion_re_bg"
        android:drawableLeft="@mipmap/icon_re"
        android:gravity="center"
        android:paddingLeft="@dimen/x_ui_px_20.0"
        android:paddingRight="@dimen/x_ui_px_20.0"
        android:text="重播"
        android:textColor="@color/white"
        android:textSize="@dimen/x_ui_px_30.0" />
</LinearLayout>