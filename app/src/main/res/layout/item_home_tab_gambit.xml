<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_ui_px_140.0">

        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="@dimen/x_ui_px_72.0"
            android:layout_height="@dimen/x_ui_px_72.0"
            android:src="@mipmap/head_default"
            android:layout_marginLeft="@dimen/x_ui_px_30.0"
            android:layout_centerVertical="true"
            />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/userIcon"
            android:layout_marginLeft="@dimen/x_ui_px_12.0"
            android:layout_marginRight="@dimen/x_ui_px_12.0"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/attentionTv">
            <TextView
                android:id="@+id/contentTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#云天收夏色,眨眼间又是一个秋天#"
                android:textSize="@dimen/x_ui_px_36.0"
                android:textColor="@color/bottom_tab_tv"
                android:ellipsize="end"
                android:lines="1"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/hotNumTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 热度"
                    android:textSize="@dimen/x_ui_px_28.0"
                    android:textColor="@color/FF999999"
                    />

                <TextView
                    android:id="@+id/attentionNumTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 关注"
                    android:textSize="@dimen/x_ui_px_28.0"
                    android:textColor="@color/FF999999"
                    android:layout_marginLeft="@dimen/x_ui_px_62.0"
                    />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/attentionTv"
            android:layout_width="@dimen/x_ui_px_116.0"
            android:layout_height="@dimen/x_ui_px_56.0"
            android:background="@drawable/rectangle_common_attention"
            android:gravity="center"
            android:text="关注"
            android:textColor="@color/white"
            android:textSize="@dimen/x_ui_px_24.0"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x_ui_px_30.0"/>


        <TextView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_ui_px_1.0"
            android:background="@color/line_color"
            android:layout_marginRight="@dimen/x_ui_px_30.0"
            android:layout_alignLeft="@+id/linearLayout"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/more"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_ui_px_80.0"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x_ui_px_30.0"
        android:visibility="gone"
        >
        <LinearLayout
            android:id="@+id/moreLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x_ui_px_28.0"
                android:textColor="@color/FF666666"
                android:text="全部话题"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/gambit_more"
                android:layout_marginLeft="@dimen/x_ui_px_16.0"/>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
