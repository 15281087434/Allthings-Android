<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/report_buttom_radius"
    android:id="@+id/parentLayout"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginTop="@dimen/x_ui_px_60.0"
            android:layout_marginLeft="@dimen/x_ui_px_30.0"
            android:layout_marginRight="@dimen/x_ui_px_30.0">

            <LinearLayout
                android:id="@+id/qqLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/window_qq"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QQ"
                    android:textColor="@color/FF666666"
                    android:textSize="@dimen/x_ui_px_28.0"
                    android:layout_marginTop="@dimen/x_ui_px_10.0"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/weChatLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/window_wechat"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信"
                    android:textColor="@color/FF666666"
                    android:textSize="@dimen/x_ui_px_28.0"
                    android:layout_marginTop="@dimen/x_ui_px_10.0"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/weChatFriendLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/window_wechat_friend"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="朋友圈"
                    android:textColor="@color/FF666666"
                    android:textSize="@dimen/x_ui_px_28.0"
                    android:layout_marginTop="@dimen/x_ui_px_10.0"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linkLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/window_link"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="复制链接"
                    android:textColor="@color/FF666666"
                    android:textSize="@dimen/x_ui_px_28.0"
                    android:layout_marginTop="@dimen/x_ui_px_10.0"/>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/x_ui_px_20.0"
            android:layout_marginLeft="@dimen/x_ui_px_30.0"
            android:layout_marginRight="@dimen/x_ui_px_30.0">

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x_ui_px_1.0"
                android:background="@color/line_color"
                android:layout_marginLeft="@dimen/x_ui_px_30.0"
                android:layout_marginRight="@dimen/x_ui_px_30.0"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginTop="@dimen/x_ui_px_35.0"
                >

                <LinearLayout
                    android:id="@+id/reportLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/repotImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/window_report"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="举报"
                        android:textColor="@color/FF666666"
                        android:textSize="@dimen/x_ui_px_28.0"
                        android:layout_marginTop="@dimen/x_ui_px_10.0"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/daytimeLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/window_daytime"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="日间模式"
                        android:textColor="@color/FF666666"
                        android:textSize="@dimen/x_ui_px_28.0"
                        android:layout_marginTop="@dimen/x_ui_px_10.0"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nightLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/modelImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/window_night"/>
                    <TextView
                        android:id="@+id/modelTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="夜间模式"
                        android:textColor="@color/FF666666"
                        android:textSize="@dimen/x_ui_px_28.0"
                        android:layout_marginTop="@dimen/x_ui_px_10.0"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:visibility="invisible">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/window_link"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="复制链接"
                        android:textColor="@color/FF666666"
                        android:textSize="@dimen/x_ui_px_28.0"
                        android:layout_marginTop="@dimen/x_ui_px_10.0"/>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_ui_px_1.0"
            android:background="@color/line_color"
            android:layout_marginTop="@dimen/x_ui_px_60.0"
            android:layout_marginLeft="@dimen/x_ui_px_30.0"
            android:layout_marginRight="@dimen/x_ui_px_30.0"
            />
        <TextView
            android:id="@+id/cancelTv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_ui_px_92.0"
            android:layout_gravity="center"
            android:text="取消"
            android:textSize="@dimen/x_ui_px_36.0"
            android:gravity="center"
            android:textColor="@color/FF666666"
            />
    </LinearLayout>
