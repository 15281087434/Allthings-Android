<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/report_buttom_radius"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_ui_px_100.0"
            >

            <ImageView
                android:id="@+id/closeImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/item_cancel"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x_ui_px_15.0"
                android:padding="@dimen/x_ui_px_15.0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="评论详情"
                android:textSize="@dimen/x_ui_px_32.0"
                android:textStyle="bold"
                android:textColor="@color/FF3B3B3B"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x_ui_px_1.0"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/x_ui_px_30.0"
                android:layout_marginRight="@dimen/x_ui_px_30.0"
                android:background="@color/line_color"/>
        </RelativeLayout>

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/smartRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/main_bg_white">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/reyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/line_color"
                android:paddingBottom="@dimen/x_ui_px_30.0"
                >
            </android.support.v7.widget.RecyclerView>

        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        <!--写评论-->
        <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_ui_px_124.0"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/FFF9FAFD"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/showEdit"
                android:layout_width="0dp"
                android:layout_height="@dimen/x_ui_px_92.0"
                android:layout_marginLeft="@dimen/x_ui_px_30.0"
                android:layout_marginRight="@dimen/x_ui_px_30.0"
                android:layout_weight="1"
                android:text="写评论"
                android:textSize="@dimen/x_ui_px_32.0"
                android:textColor="@color/FF666666"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x_ui_px_40.0"
                android:background="@drawable/bg_search_gary" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>

