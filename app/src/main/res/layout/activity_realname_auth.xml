<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <include layout="@layout/common_title_layout"/>
    <LinearLayout
        android:id="@+id/ll_authing"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/x_ui_px_50.0"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/x_ui_px_384.0"
            android:layout_height="@dimen/x_ui_px_300.0"
            android:src="@mipmap/authing"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/x_ui_px_40.0"
            android:textSize="@dimen/x_ui_px_32.0"
            android:text="实名认证审核中\n请耐心等待"/>
    </LinearLayout>
        <ScrollView
            android:id="@+id/sv_content"
            android:layout_marginTop="@dimen/x_ui_px_90.0"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y_ui_px_40.0"
        android:layout_marginBottom="@dimen/y_ui_px_40.0"
        android:layout_marginLeft="@dimen/x_ui_px_30.0"
        android:layout_marginRight="@dimen/x_ui_px_30.0"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y_ui_px_164.0"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/x_ui_px_18.0"
            android:layout_height="match_parent">
            <songqiu.allthings.view.SuperImageView
                android:id="@+id/iv_card_forground"
                app:super_shape_type="rectangle"
                app:super_radius="@dimen/x_ui_px_10.0"

                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_cardid_1"
                android:layout_height="@dimen/y_ui_px_132.0"/>


        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/x_ui_px_18.0"
            android:layout_height="match_parent">
            <songqiu.allthings.view.SuperImageView
                android:id="@+id/iv_card_back"
                android:src="@mipmap/icon_cardid_2"
                android:layout_width="match_parent"
                app:super_shape_type="rectangle"
                app:super_radius="@dimen/x_ui_px_10.0"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/y_ui_px_132.0"/>

        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <songqiu.allthings.view.SuperImageView
                android:id="@+id/iv_card_hand"
                app:super_shape_type="rectangle"
                app:super_radius="@dimen/x_ui_px_10.0"
                android:src="@mipmap/icon_cardid_3"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/y_ui_px_132.0"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y_ui_px_110.0"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x_ui_px_10.0"
        android:gravity="center_vertical">
        <TextView
            android:text="真实姓名"
            android:layout_width="wrap_content"
            android:textSize="@dimen/font_ui_px_38.0"
            android:layout_height="wrap_content"/>
        <TextView

            android:id="@+id/tv_realname"
            android:hint="请输入真实姓名"
            android:textColorHint="@color/black"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/x_ui_px_20.0"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/x_ui_px_40.0"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/font_ui_px_38.0"
            android:lines="1"
            android:ellipsize="end"
            android:drawableRight="@mipmap/arrow_next"
            android:layout_height="wrap_content"/>
    </LinearLayout>
        <View
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y_ui_px_4.0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y_ui_px_110.0"
            android:orientation="horizontal"

            android:gravity="center_vertical">
            <TextView
                android:text="身份证号"
                android:layout_width="wrap_content"
                android:textSize="@dimen/font_ui_px_38.0"
                android:layout_height="wrap_content"/>
            <TextView

                android:id="@+id/tv_cardid"
                android:hint="请输入身份证号"
                android:textColorHint="@color/black"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:maxLength="18"
                android:textColor="@color/black"
                android:drawablePadding="@dimen/x_ui_px_40.0"
                android:gravity="center_vertical|right"
                android:textSize="@dimen/font_ui_px_38.0"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginLeft="@dimen/x_ui_px_20.0"
                android:drawableRight="@mipmap/arrow_next"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y_ui_px_4.0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y_ui_px_110.0"
            android:orientation="horizontal"

            android:gravity="center_vertical">
            <TextView
                android:text="性别"
                android:layout_width="wrap_content"
                android:textSize="@dimen/font_ui_px_38.0"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_sex"
                android:hint="请选择"
                android:textColorHint="@color/black"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:drawablePadding="@dimen/x_ui_px_40.0"
                android:gravity="center_vertical|right"
                android:textSize="@dimen/font_ui_px_38.0"
                android:drawableRight="@mipmap/arrow_next"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y_ui_px_4.0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y_ui_px_110.0"
            android:orientation="horizontal"

            android:gravity="center_vertical">
            <TextView
                android:text="邮箱地址"
                android:layout_width="wrap_content"
                android:textSize="@dimen/font_ui_px_38.0"
                android:layout_height="wrap_content"/>
            <TextView

                android:id="@+id/tv_email"
                android:hint="请输入您的邮箱号"
                android:textColorHint="@color/black"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/x_ui_px_20.0"
                android:textColor="@color/black"
                android:drawablePadding="@dimen/x_ui_px_40.0"
                android:gravity="center_vertical|right"
                android:textSize="@dimen/font_ui_px_38.0"
                android:maxLength="20"
                android:lines="1"
                android:ellipsize="end"
                android:drawableRight="@mipmap/arrow_next"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y_ui_px_4.0"/>
        <LinearLayout
        android:layout_width="match_parent"
            android:layout_height="@dimen/y_ui_px_110.0"
        android:orientation="horizontal"

        android:gravity="center_vertical">
        <TextView
            android:text="常住地址"
            android:layout_width="wrap_content"
            android:textSize="@dimen/font_ui_px_38.0"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_adress"
            android:hint="请选择省、市、区"
            android:textColorHint="@color/black"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/x_ui_px_40.0"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/font_ui_px_38.0"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/x_ui_px_20.0"
            android:drawableRight="@mipmap/arrow_next"
            android:layout_height="wrap_content"/>
    </LinearLayout>
        <View
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y_ui_px_4.0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y_ui_px_110.0"
            android:orientation="vertical"

            android:gravity="center_vertical">
            <TextView
                android:text="详细地址"
                android:layout_width="wrap_content"
                android:textSize="@dimen/font_ui_px_38.0"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_adress_details"
            android:layout_marginTop="@dimen/x_ui_px_20.0"
            android:hint="请输入详细地址"
            android:layout_width="match_parent"
            android:padding="@dimen/x_ui_px_28.0"
            android:textColor="@color/black"
            android:gravity="start"
            android:minLines="2"
            android:textSize="@dimen/font_ui_px_38.0"
            android:background="@drawable/adress_textview_bg"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_auth"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/x_ui_px_110.0"
            android:layout_marginRight="@dimen/x_ui_px_110.0"
            android:layout_marginTop="@dimen/x_ui_px_48.0"
            android:text="认证"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/x_ui_px_80.0"
            android:background="@drawable/auth_details_button_bg"
            android:textSize="@dimen/font_ui_px_46.0"
            android:layout_height="@dimen/x_ui_px_100.0"/>

    </LinearLayout>
        </ScrollView>
    <LinearLayout
        android:id="@+id/shadowLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/trans_6"
        android:orientation="vertical"
        android:visibility="gone"></LinearLayout>
</FrameLayout>