<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x_ui_px_110.0"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="@dimen/x_ui_px_600.0"
        android:layout_height="@dimen/x_ui_px_110.0"
        android:layout_marginLeft="@dimen/x_ui_px_75.0"
        android:layout_marginRight="@dimen/x_ui_px_75.0"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@drawable/rectangle_f0f0f0_60px_white"
        >

        <LinearLayout
            android:id="@+id/goldLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/goldImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/money_yellow"/>
            <TextView
                android:id="@+id/goldTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金币收益"
                android:textColor="@color/bottom_tab_tv"
                android:textSize="@dimen/x_ui_px_36.0"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/x_ui_px_8.0"
                />

        </LinearLayout>

        <TextView
            android:layout_width="@dimen/x_ui_px_2.0"
            android:layout_height="@dimen/x_ui_px_40.0"
            android:background="@color/line_color"
            android:layout_gravity="center_vertical"
            />

        <LinearLayout
            android:id="@+id/cashLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/cashImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/cash_gray"/>
            <TextView
                android:id="@+id/cashTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现金收益"
                android:textColor="@color/FF999999"
                android:textSize="@dimen/x_ui_px_36.0"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/x_ui_px_8.0"
                />

        </LinearLayout>



    </LinearLayout>


</LinearLayout>
