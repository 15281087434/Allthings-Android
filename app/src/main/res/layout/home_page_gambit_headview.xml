<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 滑动广告-->
        <songqiu.allthings.view.banner.RollPagerView
            android:id="@+id/roll_page_home"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_ui_px_330.0"
            app:rollviewpager_hint_gravity="center"
            app:rollviewpager_play_delay="3000"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_ui_px_100.0"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x_ui_px_30.0"
                android:layout_marginTop="@dimen/x_ui_px_40.0"
                android:text="热门话题"
                android:textColor="@color/FF666666"
                android:textSize="@dimen/x_ui_px_28.0"/>

            <LinearLayout
                android:id="@+id/hotRefreshLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/x_ui_px_30.0"
                android:layout_marginTop="@dimen/x_ui_px_40.0"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="换一换"
                    android:textColor="@color/FF666666"
                    android:textSize="@dimen/x_ui_px_28.0"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/gambit_refesh"
                    android:layout_marginLeft="@dimen/x_ui_px_12.0"/>

            </LinearLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_ui_px_1.0"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/x_ui_px_30.0"
            android:layout_marginRight="@dimen/x_ui_px_30.0"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/hotRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_ui_px_12.0"
            android:background="@color/line_color"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_ui_px_100.0"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x_ui_px_30.0"
                android:layout_marginTop="@dimen/x_ui_px_40.0"
                android:text="动态分享"
                android:textColor="@color/FF666666"
                android:textSize="@dimen/x_ui_px_28.0"/>

            <LinearLayout
                android:id="@+id/dynamicRefreshLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/x_ui_px_30.0"
                android:layout_marginTop="@dimen/x_ui_px_40.0"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="换一换"
                    android:textColor="@color/FF666666"
                    android:textSize="@dimen/x_ui_px_28.0"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/gambit_refesh"
                    android:layout_marginLeft="@dimen/x_ui_px_12.0"/>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_ui_px_1.0"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/x_ui_px_30.0"
            android:layout_marginRight="@dimen/x_ui_px_30.0"/>

    </LinearLayout>
</LinearLayout>
