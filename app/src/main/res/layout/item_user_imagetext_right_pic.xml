<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/layout"
    >

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/bottom_tab_tv"
        android:textSize="@dimen/x_ui_px_35.0"
        android:layout_marginTop="@dimen/x_ui_px_40.0"
        android:layout_marginLeft="@dimen/x_ui_px_30.0"
        android:layout_marginRight="@dimen/x_ui_px_30.0"
        android:text="草船借箭是一个故事"
        android:singleLine="true"
        android:maxEms="21"
        android:ellipsize="end"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/x_ui_px_30.0"
        android:layout_marginRight="@dimen/x_ui_px_30.0"
        android:layout_marginTop="@dimen/x_ui_px_20.0"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/contentTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/FF666666"
            android:textSize="@dimen/x_ui_px_31.0"
            android:ellipsize="end"
            android:maxLines="3"
            android:lineSpacingExtra="@dimen/x_ui_px_12.0"
            android:text="草船借箭是我国古典名著《三国演义》中赤壁之战的一个故事。借箭由周瑜故意提出限十天造十万支箭，机智的诸葛亮一眼识破是一条害人之计，却淡定表示“只需要三天”。"
            />
        <ImageView
            android:id="@+id/rightPic"
            android:layout_width="@dimen/x_ui_px_252.0"
            android:layout_height="@dimen/x_ui_px_152.0"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/x_ui_px_12.0"
            android:src="@mipmap/item_home_tab_right_pic"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_ui_px_120.0"
        android:layout_marginLeft="@dimen/x_ui_px_20.0"
        android:layout_marginRight="@dimen/x_ui_px_20.0">

        <LinearLayout
            android:id="@+id/likeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/x_ui_px_10.0"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/likeImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/item_like"/>
            <TextView
                android:id="@+id/likeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/x_ui_px_28.0"
                android:textColor="@color/FF666666"
                android:layout_marginLeft="@dimen/x_ui_px_10.0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/home_comment"/>
            <TextView
                android:id="@+id/commentTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/x_ui_px_28.0"
                android:textColor="@color/FF666666"
                android:layout_marginLeft="@dimen/x_ui_px_10.0"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shareLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/x_ui_px_10.0"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:id="@+id/shareImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/item_inform"/>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_ui_px_1.0"
        android:background="@color/line_color"
        android:layout_marginLeft="@dimen/x_ui_px_30.0"
        android:layout_marginRight="@dimen/x_ui_px_30.0"/>

</LinearLayout>
