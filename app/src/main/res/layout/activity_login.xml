<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/backImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x_ui_px_37.0"
            android:src="@mipmap/icon_login_cancel"
            android:padding="@dimen/x_ui_px_30.0"/>


        <ImageView
            android:layout_width="@dimen/x_ui_px_154.0"
            android:layout_height="@dimen/x_ui_px_154.0"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x_ui_px_68.0"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_login"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/x_ui_px_73.0"
            android:layout_marginRight="@dimen/x_ui_px_71.0"
            android:layout_marginTop="@dimen/x_ui_px_150.0"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_login_phone"/>

            <EditText
                android:id="@+id/phoneEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="手机号"
                android:textColorHint="@color/FF999999"
                android:textSize="@dimen/x_ui_px_36.0"
                android:textColor="@color/bottom_tab_tv"
                android:background="@null"
                android:paddingTop="@dimen/x_ui_px_15.0"
                android:paddingBottom="@dimen/x_ui_px_15.0"
                android:layout_marginLeft="@dimen/x_ui_px_15.0"
                android:maxLength="11"
                android:inputType="number"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_ui_px_1.0"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/x_ui_px_73.0"
            android:layout_marginRight="@dimen/x_ui_px_71.0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x_ui_px_80.0"
            android:layout_marginLeft="@dimen/x_ui_px_73.0"
            android:layout_marginRight="@dimen/x_ui_px_71.0"
            android:orientation="horizontal"
            android:gravity="center_vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_login_code"/>
            <EditText
                android:id="@+id/codeEt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="验证码"
                android:textColorHint="@color/FF999999"
                android:textSize="@dimen/x_ui_px_36.0"
                android:textColor="@color/bottom_tab_tv"
                android:background="@null"
                android:paddingTop="@dimen/x_ui_px_15.0"
                android:paddingBottom="@dimen/x_ui_px_15.0"
                android:maxLength="4"
                android:inputType="number"
                android:layout_marginLeft="@dimen/x_ui_px_15.0"
                />

            <TextView
                android:id="@+id/codeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textColor="@color/normal_color"
                android:textSize="@dimen/x_ui_px_35.0"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_ui_px_1.0"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/x_ui_px_73.0"
            android:layout_marginRight="@dimen/x_ui_px_71.0"/>

        <TextView
            android:id="@+id/loginTv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_ui_px_86.0"
            android:layout_marginTop="@dimen/x_ui_px_84.0"
            android:layout_marginLeft="@dimen/x_ui_px_73.0"
            android:layout_marginRight="@dimen/x_ui_px_71.0"
            android:background="@drawable/rectangle_common_login_999999"
            android:gravity="center"
            android:text="登录"
            android:textSize="@dimen/x_ui_px_36.0"
            android:textColor="@color/FFBFBFBF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x_ui_px_124.0"
            android:layout_marginLeft="@dimen/x_ui_px_30.0"
            android:layout_marginRight="@dimen/x_ui_px_30.0"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/x_ui_px_1.0"
                android:layout_weight="1"
                android:background="@color/line_color"
                android:layout_marginRight="@dimen/x_ui_px_28.0"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其它方式登录"
                android:layout_centerInParent="true"
                android:textSize="@dimen/x_ui_px_28.0"
                android:textColor="@color/FFBFBFBF"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/x_ui_px_1.0"
                android:layout_weight="1"
                android:background="@color/line_color"
                android:layout_marginLeft="@dimen/x_ui_px_28.0"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/x_ui_px_42.0"
            android:layout_gravity="center_horizontal">


            <ImageView
                android:id="@+id/weChatImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/window_wechat"
                />

            <ImageView
                android:id="@+id/qqImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/window_qq"
                android:layout_marginLeft="@dimen/x_ui_px_121.0"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/x_ui_px_65.0"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/x_ui_px_38.0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录后即同意“"
                android:textSize="@dimen/x_ui_px_23.0"
                android:textColor="@color/FF666666"/>
            <TextView
                android:id="@+id/userTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户协议"
                android:textSize="@dimen/x_ui_px_23.0"
                android:textColor="@color/FF6FA4EB"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="”和“"
                android:textSize="@dimen/x_ui_px_23.0"
                android:textColor="@color/FF666666"/>
            <TextView
                android:id="@+id/privaceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="隐私政策"
                android:textSize="@dimen/x_ui_px_23.0"
                android:textColor="@color/FF6FA4EB"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="”"
                android:textSize="@dimen/x_ui_px_24.0"
                android:textColor="@color/bottom_tab_tv"/>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/preloadLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg_white"
        android:visibility="gone"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_preload"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/shadowLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/trans_6"
        android:visibility="gone"
        >
    </LinearLayout>

</RelativeLayout>
