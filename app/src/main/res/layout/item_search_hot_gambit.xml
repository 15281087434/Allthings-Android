<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

   <LinearLayout
       android:id="@+id/layout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

       <TextView
           android:id="@+id/contentTv"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           tools:text="#征个喜欢看电影的小哥哥 看看刺激系列的#"
           android:textColor="@color/bottom_tab_tv"
           android:textSize="@dimen/x_ui_px_36.0"
           android:singleLine="true"
           android:ellipsize="end"
           android:layout_marginRight="@dimen/x_ui_px_30.0"
           android:layout_marginTop="@dimen/x_ui_px_10.0"
           android:layout_marginBottom="@dimen/x_ui_px_10.0"/>

       <TextView
           android:id="@+id/hotNumTv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="0"
           android:textColor="@color/FFDE5C51"
           android:textSize="@dimen/x_ui_px_36.0"
           android:layout_marginTop="@dimen/x_ui_px_10.0"
           android:layout_marginBottom="@dimen/x_ui_px_10.0"
           android:layout_marginRight="@dimen/x_ui_px_8.0"
           />

       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@mipmap/icon_hot"
           android:layout_gravity="center_vertical"/>

   </LinearLayout>
    

</LinearLayout>
