<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x_ui_px_232.0"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/x_ui_px_30.0"
        android:layout_marginRight="@dimen/x_ui_px_30.0"
        android:layout_marginTop="@dimen/x_ui_px_40.0"
        android:layout_marginBottom="@dimen/x_ui_px_40.0">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/x_ui_px_152.0"
            android:layout_weight="1">

            <TextView
                android:id="@+id/contentTv"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/bottom_tab_tv"
                android:textSize="@dimen/x_ui_px_40.0"
                android:ellipsize="end"
                android:maxLines="1"
                android:textStyle="bold"
                tools:text="草船借箭是我国古典名著《三国演义》中赤壁之战的一个故事。借箭由周瑜故意提出限十天造十万支箭，机智的诸葛亮一眼识破是一条害人之计，却淡定表示“只需要三天”。"
                />

            <TextView
                android:id="@+id/describeTv"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/FF666666"
                android:textSize="@dimen/x_ui_px_28.0"
                android:ellipsize="end"
                android:maxLines="2"
                android:lineSpacingExtra="@dimen/x_ui_px_8.0"
                tools:text="草船借限十天造十只需要三天”。"
                android:layout_alignParentBottom="true"
                />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="大力"
                android:textSize="@dimen/x_ui_px_24.0"
                android:textColor="@color/FFBFBFBF"
                android:layout_alignParentBottom="true"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/lookNumTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0次观看"
                android:textSize="@dimen/x_ui_px_24.0"
                android:textColor="@color/FFBFBFBF"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x_ui_px_24.0"
                android:visibility="gone"/>


        </RelativeLayout>

        <ImageView
            android:id="@+id/rightPic"
            android:layout_width="@dimen/x_ui_px_252.0"
            android:layout_height="@dimen/x_ui_px_152.0"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/x_ui_px_16.0"
            android:src="@mipmap/item_home_tab_right_pic"/>

    </LinearLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_ui_px_1.0"
        android:background="@color/line_color"
        android:layout_marginRight="@dimen/x_ui_px_30.0"
        android:layout_marginLeft="@dimen/x_ui_px_30.0"/>


</LinearLayout>
