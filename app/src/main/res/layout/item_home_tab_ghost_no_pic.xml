<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/FF233239"
    android:orientation="vertical"
    android:id="@+id/layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x_ui_px_28.0"
        android:layout_marginLeft="@dimen/x_ui_px_30.0"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_sai"
            android:layout_width="@dimen/x_ui_px_40.0"
            android:layout_height="@dimen/x_ui_px_40.0"
            android:text="赛"

            android:gravity="center"
            android:textColor="@color/FFE7A722"
            android:visibility="gone"
            android:layout_marginRight="@dimen/x_ui_px_10.0"
            android:textSize="@dimen/font_ui_px_30.0"
            android:background="@drawable/tag_sai_bg_shape"/>
        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="@color/normal_color"
            android:textSize="@dimen/x_ui_px_40.0"
            android:layout_marginTop="@dimen/x_ui_px_6.0"
            android:layout_marginRight="@dimen/x_ui_px_30.0"
            android:text="草船借箭是一个故事"
            android:maxLines="2"
            android:lineSpacingExtra="@dimen/x_ui_px_4.0"
            android:ellipsize="end"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x_ui_px_8.0"
        android:layout_gravity="center_horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布时间:  "
            android:textColor="@color/FFBFBFBF"
            android:textSize="@dimen/x_ui_px_24.0"/>
        <TextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刚刚"
            android:textColor="@color/FFBFBFBF"
            android:textSize="@dimen/x_ui_px_24.0"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="浏览:  "
            android:textColor="@color/FFBFBFBF"
            android:textSize="@dimen/x_ui_px_24.0"
            android:layout_marginLeft="@dimen/x_ui_px_90.0"/>
        <TextView
            android:id="@+id/lookTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0次"
            android:textColor="@color/FFBFBFBF"
            android:textSize="@dimen/x_ui_px_24.0"/>

    </LinearLayout>

    <!--标签-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/x_ui_px_30.0">
        <TextView
            android:id="@+id/keywordsTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="悬疑"
            android:textSize="@dimen/x_ui_px_19.0"
            android:textColor="@color/FF9C44A2"
            android:background="@color/FF339C44A2"
            android:layout_marginTop="@dimen/x_ui_px_12.0"
            android:paddingLeft="@dimen/x_ui_px_6.0"
            android:paddingRight="@dimen/x_ui_px_6.0"
            android:paddingTop="@dimen/x_ui_px_2.0"
            android:paddingBottom="@dimen/x_ui_px_2.0"
            android:layout_marginRight="@dimen/x_ui_px_20.0"
            />
        <TextView
            android:id="@+id/labels1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="悬疑"
            android:textSize="@dimen/x_ui_px_19.0"
            android:textColor="@color/FF9C44A2"
            android:background="@drawable/labels1_bg"
            android:layout_marginTop="@dimen/x_ui_px_12.0"
            android:paddingLeft="@dimen/x_ui_px_6.0"
            android:paddingRight="@dimen/x_ui_px_6.0"
            android:paddingTop="@dimen/x_ui_px_2.0"
            android:paddingBottom="@dimen/x_ui_px_2.0"
            android:layout_marginRight="@dimen/x_ui_px_20.0"
            />
        <TextView
            android:id="@+id/labels2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="悬疑"
            android:textSize="@dimen/x_ui_px_19.0"
            android:textColor="@color/FF1C8725"
            android:background="@drawable/labels2_bg"
            android:layout_marginTop="@dimen/x_ui_px_12.0"
            android:paddingLeft="@dimen/x_ui_px_6.0"
            android:paddingRight="@dimen/x_ui_px_6.0"
            android:paddingTop="@dimen/x_ui_px_2.0"
            android:paddingBottom="@dimen/x_ui_px_2.0"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/contentTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/FFA2A2A2"
        android:textSize="@dimen/x_ui_px_31.0"
        android:layout_marginTop="@dimen/x_ui_px_20.0"
        android:layout_marginRight="@dimen/x_ui_px_30.0"
        android:layout_marginLeft="@dimen/x_ui_px_30.0"
        android:ellipsize="end"
        android:maxLines="3"
        android:lineSpacingExtra="@dimen/x_ui_px_12.0"
        android:text="草船借箭是我国古典名著《三国演义》中赤壁之战的一个故事。借箭由周瑜故意提出限十天造十万支箭，机智的诸葛亮一眼识破是一条害人之计，却淡定表示“只需要三天”。"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/x_ui_px_20.0"
            android:layout_marginBottom="@dimen/x_ui_px_28.0"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x_ui_px_30.0"
            android:paddingRight="@dimen/x_ui_px_20.0">
            <TextView
                android:id="@+id/hotTv"
                android:layout_width="@dimen/x_ui_px_27.0"
                android:layout_height="@dimen/x_ui_px_27.0"
                android:background="@drawable/rectangle_hot_bg"
                android:text="热"
                android:gravity="center"
                android:textSize="@dimen/x_ui_px_17.0"
                android:textColor="@color/FFE65C65"
                android:layout_marginRight="@dimen/x_ui_px_15.0"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/recommendTv"
                android:layout_width="@dimen/x_ui_px_27.0"
                android:layout_height="@dimen/x_ui_px_27.0"
                android:background="@drawable/rectangle_recommend_bg"
                android:text="荐"
                android:gravity="center"
                android:textSize="@dimen/x_ui_px_17.0"
                android:textColor="@color/FF5098FC"
                android:layout_marginRight="@dimen/x_ui_px_15.0"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/newTv"
                android:layout_width="@dimen/x_ui_px_27.0"
                android:layout_height="@dimen/x_ui_px_27.0"
                android:background="@drawable/rectangle_new_bg"
                android:text="新"
                android:gravity="center"
                android:textSize="@dimen/x_ui_px_17.0"
                android:textColor="@color/FFDEB72D"
                android:layout_marginRight="@dimen/x_ui_px_15.0"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/userIcon"
                    android:layout_width="@dimen/x_ui_px_70.0"
                    android:layout_height="@dimen/x_ui_px_70.0"
                    android:src="@mipmap/item_home_tab_user_icon"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/x_ui_px_28.0"
                    android:textColor="@color/FF666666"
                    android:text="大力·悬疑"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />

                <TextView
                    android:id="@+id/setTopTv"
                    android:layout_width="@dimen/x_ui_px_52.0"
                    android:layout_height="@dimen/x_ui_px_32.0"
                    android:textSize="@dimen/x_ui_px_16.0"
                    android:textColor="@color/FFDE5C51"
                    android:background="@drawable/rectangle_common_red_ghost"
                    android:text="置顶"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/x_ui_px_16.0"
                    android:visibility="gone"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/collectTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/item_ghost_collect"
                android:text="0"
                android:textColor="@color/FF999999"
                android:textSize="@dimen/x_ui_px_23.0"
                android:drawablePadding="@dimen/x_ui_px_5.0"
                android:layout_marginRight="@dimen/x_ui_px_10.0"/>

            <ImageView
                android:id="@+id/deleteImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_ghost_cancel"
                android:padding="@dimen/x_ui_px_10.0"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_ui_px_12.0"
        android:background="@color/line_color_night"/>

</LinearLayout>
