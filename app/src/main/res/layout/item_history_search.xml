<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x_ui_px_70.0"
    android:orientation="horizontal"
    android:id="@+id/layout"
    >
    <TextView
        android:id="@+id/tv_contents"
        android:layout_width="0dp"
        android:layout_height="@dimen/x_ui_px_60.0"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="@color/bottom_tab_tv"
        android:textSize="@dimen/x_ui_px_36.0"
        android:singleLine="true"
        android:ellipsize="end"/>

    <ImageView
        android:id="@+id/removeImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/item_cancel"
        android:padding="6dp"
        android:layout_gravity="center_vertical"/>

</LinearLayout>



